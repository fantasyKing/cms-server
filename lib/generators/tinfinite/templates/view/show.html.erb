<%% content_for(:page_header) do %>
  <%%= "Database" %>
<%% end %>
<%% content_for :panel_heading do %>Details <%= db_name %>: <%= model_name %><% end %>

<h3><%= model_name %></h3>
<div class="block">
  <div class="block-header">
    <%= model_name %> #<%= @<%= model_name %> %>
  </div>
  <div class="block-content">
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <tbody>
          <%% attrs = @<%= model_name %>.attributes.except("_id").keys %>
          <%% attrs.each do |a| %>
          <tr>
            <td><%%= a.humanize %></td>
            <td><%%= @<%= model_name %>.attributes[a].to_s %></td>
          </tr>
          <%% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>
