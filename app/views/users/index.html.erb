<% content_for(:page_header) do %>
  <%= "User" %>
<% end %>
<% content_for :panel_heading do %>User List<% end %>
<table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-user">
    <thead>
        <tr>
            <th>Id</th>
            <th>name</th>
            <th>email</th>
            <th>is_admin</th>
            <!--<th>team</th>-->
        </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr class="odd gradeX">
        <%= render user %>
      </tr>
    <% end %>
    </tbody>
</table>
<script>
  $(document).ready(function() {
      $('#dataTables-user').DataTable({
          responsive: true
      });
  });
</script>